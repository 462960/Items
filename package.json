{
  "name": "inventory_react",
  "version": "1.0.0",
  "main": "src/index.ts",
  "author": "jelvix team",
  "scripts": {
    "build:only": "webpack --config ./config/webpack.production.js --mode production",
    "build": "npm run clean && npm run build:only && npm run copyAssets",
    "start": "webpack-dev-server --config ./config/webpack.development.js --mode development --open",
    "clean": "rimraf build stats.json",
    "clean:all": "npm run clean && npm run markup:clean",
    "copyAssets": "cp -R ./src/assets/* ./build",
    "serve": "static build",
    "lint": "bash -c 'tslint -c tslint.json \"${1-./src}/**/*.{ts,tsx}\"' -- ",
    "lint:fix": "bash -c 'tslint -c tslint.json --fix \"${1-./src}/**/*.{ts,tsx}\"' -- ",
    "lint:css": "bash -c 'stylelint \"${1-./src}/**/*.scss\"' -- ",
    "lint:css:fix": "bash -c 'stylelint --fix \"${1-./src}/**/*.scss\"' -- ",
    "svgstep1": "del-cli -f src/assets/images/sprite.svg",
    "svgstep2": "svgo -f src/assets/images/svg-icon/ -o src/assets/images/svg-icon/tmp",
    "svgstep3": "svg-sprite-generate -d src/assets/images/svg-icon/tmp -o src/assets/images/sprite.svg",
    "svgstep4": "del-cli -f src/assets/images/svg-icon/tmp",
    "make-sprite": "npm run svgstep1 && npm run svgstep2 && npm run svgstep3 && npm run svgstep4",
    "markup:build:only": "webpack --config ./config/webpack.markup.js",
    "markup:copyAssets": "cp -R ./src/assets/* ./markup_dist",
    "markup:clean": "rimraf markup_dist",
    "markup:start": "webpack-dev-server --config ./config/webpack.markup.js --open",
    "markup:build": "npm run markup:clean && npm run markup:build:only && npm run markup:copyAssets",
    "markup:serve": "static markup_dist",
    "test": "jest --ci --colors --coverage --no-cache"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "setupFiles": [
      "raf/polyfill"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.spec.(ts|tsx|js)"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>src/setupTests.ts",
    "snapshotSerializers": [
      "enzyme-to-json"
    ]
  },
  "devDependencies": {
    "@types/classnames": "2.2.4",
    "@types/enzyme": "3.1.9",
    "@types/enzyme-adapter-react-16": "1.0.2",
    "@types/jest": "22.2.3",
    "@types/react": "16.3.6",
    "@types/react-dom": "16.0.4",
    "@types/react-intl": "2.3.8",
    "@types/react-redux": "6.0.3",
    "@types/react-router": "4.0.25",
    "@types/react-router-dom": "4.2.7",
    "@types/redux-actions": "2.3.0",
    "@types/uuid": "3.4.3",
    "@types/webpack-env": "1.13.5",
    "awesome-typescript-loader": "5.0.0",
    "babel-core": "6.26.0",
    "babel-loader": "7.1.4",
    "babel-preset-env": "1.6.1",
    "compression-webpack-plugin": "1.1.11",
    "css-loader": "0.28.11",
    "del-cli": "1.1.0",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "enzyme-to-json": "3.3.3",
    "file-loader": "1.1.11",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.1.0",
    "husky": "1.0.0-rc.6",
    "jest": "22.4.3",
    "jquery": "3.3.1",
    "lint-staged": "7.1.2",
    "mini-css-extract-plugin": "0.3.0",
    "node-sass": "4.8.3",
    "node-static": "0.7.10",
    "optimize-css-assets-webpack-plugin": "4.0.0",
    "popper.js": "1.14.3",
    "prettier": "1.12.1",
    "prop-types": "15.6.1",
    "pug-html-loader": "1.1.5",
    "raf": "3.4.0",
    "react-test-renderer": "16.3.1",
    "sass-loader": "6.0.7",
    "source-map-loader": "0.2.3",
    "style-loader": "0.20.3",
    "stylelint": "9.1.3",
    "stylelint-config-standard": "18.2.0",
    "svg-sprite-generator": "0.0.7",
    "svgo": "0.7.2",
    "ts-jest": "22.4.3",
    "tslint": "5.9.1",
    "tslint-config-airbnb": "5.8.0",
    "tslint-config-prettier": "1.13.0",
    "tslint-plugin-prettier": "1.3.0",
    "tslint-react": "3.5.1",
    "typescript": "2.8.1",
    "uglifyjs-webpack-plugin": "1.2.4",
    "webpack": "4.3.0",
    "webpack-bundle-analyzer": "2.11.1",
    "webpack-cli": "2.0.14",
    "webpack-dev-server": "3.1.1",
    "webpack-merge": "4.1.2"
  },
  "dependencies": {
    "axios": "0.18.0",
    "bootstrap": "4.0.0",
    "classnames": "2.2.5",
    "downloadjs": "1.4.7",
    "final-form": "4.6.1",
    "immutable": "3.8.2",
    "lodash.capitalize": "4.2.1",
    "lodash.compact": "3.0.1",
    "lodash.debounce": "4.0.8",
    "lodash.floor": "4.0.4",
    "lodash.get": "4.4.2",
    "lodash.isempty": "4.4.0",
    "lodash.isequal": "4.5.0",
    "lodash.isnil": "4.0.0",
    "lodash.map": "4.6.0",
    "lodash.pickby": "4.6.0",
    "lodash.uniq": "4.5.0",
    "moment": "2.22.2",
    "query-string": "6.1.0",
    "react": "16.3.1",
    "react-calendar": "2.16.0",
    "react-dom": "16.2.0",
    "react-draggable": "3.0.5",
    "react-dropzone": "4.2.9",
    "react-final-form": "3.4.0",
    "react-intl": "2.4.0",
    "react-loadable": "5.3.1",
    "react-redux": "5.0.7",
    "react-router": "4.2.0",
    "react-router-dom": "4.2.2",
    "react-transition-group": "2.3.1",
    "redux": "3.7.2",
    "redux-actions": "2.3.0",
    "redux-immutable": "4.0.0",
    "redux-saga": "0.16.0",
    "reselect": "3.0.1",
    "uuid": "3.2.1"
  }
}
